@model KoroneLibrary.Models.Article

<head>
    <link rel="stylesheet" type="text/css" href="~/css/article/article-read.css" />
</head>


@{
    ViewData["Title"] = $"编辑-{((Model == null) ? "" : Model.Title)}";
}
@{
    var BreadCrumbDict = new List<string>();
    BreadCrumbDict.Add($"{Model.Grade}");
    BreadCrumbDict.Add($"{Model.Unit}");
    if (!String.IsNullOrEmpty(Model.Tag))
    {
        var tagList = Model.Tag.Split(",;.");

        foreach (var item in tagList)
        {
            BreadCrumbDict.Add(item);
        }
    }
}


<div class="container">
    <form class="body-paper" method="post" asp-action="Edit">

        <div class="bread-crumb float-right m-2">
            <input type="text" class="p1 underline-box" placeholder="标签，用英文分号(;)隔开" asp-for="Tag" />
        </div>
        <div class="triangle"></div>
        <div class="container">
            <div class="h4 text-center">
                <input class="h4 text-center underline-box" type="text" placeholder="标题" asp-for="Title" />
            </div>
            <div class="p-1 text-center">
                <input class="p1 text-center underline-box" type="text" placeholder="作者" asp-for="Author" />
            </div>

            <div id="bodybox" class="text-body">
                <textarea class="form-control-lg underline-box" style="width:100%;height:500px" asp-for="Body" placeholder="正文"></textarea>
            </div>
            <input type="hidden" asp-for="Uuid" />
            <hr />

            <table class="node table table-striped font-weight-light">
                <thead>
                    <tr>
                        <th class="font-weight-light">注释</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Node != null)
                    {
                        @foreach (var item in Model.Node)
                        {
                            <tr>
                                <td class="w-25">
                                    <input class="font-weight-light text-center underline-box w-100" type="text" placeholder="引用" value="@item.Key" />
                                </td>
                                <td class="w-75">
                                    <input class="font-weight-light text-center underline-box w-100" type="text" placeholder="注释" value="@item.Value" />
                                </td>
                                <td>
                                    <input type="button" class="btn btn-light" value="x" />
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <input type="button" class="btn btn-primary" name="addButton" value="新增一条注释" />
            <input type="submit" class="btn btn-success" name="save" value="保存" />
        </div>
    </form>
</div>

